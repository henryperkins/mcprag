{
    "mcpServers": {
        "azure-code-search-sdk": {
            "command": "python",
            "args": [
                "mcp_server_sdk_proper.py"
            ],
            "env": {
                "PYTHONPATH": "."
            }
        },
        "azure-code-search-unified": {
            "command": "python",
            "args": [
                "mcp_server_unified.py",
                "--mode",
                "rpc"
            ],
            "env": {
                "PYTHONPATH": "."
            }
        },
        "azure-code-search": {
            "command": "python",
            "args": [
                "mcp_server_sota.py",
                "--mode",
                "rpc"
            ],
            "env": {
                "PYTHONPATH": "."
            }
        }
    }
}
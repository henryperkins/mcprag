{
  "name": "codebase-mcp-sota",
  "fields": [
    {
      "name": "id",
      "type": "Edm.String",
      "key": true
    },
    {
      "name": "repo_name",
      "type": "Edm.String",
      "searchable": true,
      "filterable": true,
      "facetable": true
    },
    {
      "name": "file_path",
      "type": "Edm.String",
      "searchable": true,
      "filterable": true
    },
    {
      "name": "language",
      "type": "Edm.String",
      "filterable": true,
      "facetable": true
    },
    {
      "name": "code_chunk",
      "type": "Edm.String",
      "searchable": true,
      "analyzer": "en.microsoft"
    },
    {
      "name": "semantic_context",
      "type": "Edm.String",
      "searchable": true
    },
    {
      "name": "function_signature",
      "type": "Edm.String",
      "searchable": true,
      "filterable": true
    },
    {
      "name": "imports_used",
      "type": "Collection(Edm.String)",
      "searchable": true,
      "filterable": true
    },
    {
      "name": "calls_functions",
      "type": "Collection(Edm.String)",
      "searchable": true
    },
    {
      "name": "chunk_type",
      "type": "Edm.String",
      "filterable": true,
      "facetable": true
    },
    {
      "name": "line_range",
      "type": "Edm.String",
      "searchable": false,
      "filterable": true
    },
    {
      "name": "code_vector",
      "type": "Collection(Edm.Single)",
      "searchable": true,
      "retrievable": true,
      "dimensions": 1536,
      "vectorSearchProfile": "code-vector-profile"
    }
  ],
  "vectorSearch": {
    "algorithms": [
      {
        "name": "code-hnsw",
        "kind": "hnsw",
        "hnswParameters": {
          "metric": "cosine",
          "m": 4,
          "efConstruction": 400,
          "efSearch": 500
        }
      }
    ],
    "profiles": [
      {
        "name": "code-vector-profile",
        "algorithm": "code-hnsw",
        "vectorizer": "code-vectorizer"
      }
    ],
    "vectorizers": [
      {
        "name": "code-vectorizer",
        "kind": "azureOpenAI",
        "azureOpenAIParameters": {
          "resourceUri": "${AZURE_OPENAI_ENDPOINT}",
          "deploymentId": "${AZURE_OPENAI_DEPLOYMENT}",
          "modelName": "text-embedding-3-large",
          "apiKey": "${AZURE_OPENAI_KEY}"
        }
      }
    ]
  },
  "semantic": {
    "defaultConfiguration": "mcp-semantic",
    "configurations": [
      {
        "name": "mcp-semantic",
        "prioritizedFields": {
          "titleField": {
            "fieldName": "function_signature"
          },
          "prioritizedContentFields": [
            {
              "fieldName": "semantic_context"
            },
            {
              "fieldName": "code_chunk"
            }
          ],
          "prioritizedKeywordsFields": [
            {
              "fieldName": "imports_used"
            },
            {
              "fieldName": "calls_functions"
            }
          ]
        }
      }
    ]
  }
}
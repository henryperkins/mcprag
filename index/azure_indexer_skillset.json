{
  "name": "mcprag-codebase-skillset",
  "description": "Code processing skillset for repository analysis",
  "skills": [
    {
      "@odata.type": "#Microsoft.Skills.Text.SplitSkill",
      "name": "code_splitter",
      "description": "Split code files into semantic chunks",
      "context": "/document",
      "defaultLanguageCode": "en",
      "textSplitMode": "pages",
      "maximumPageLength": 4000,
      "pageOverlapLength": 200,
      "inputs": [
        {
          "name": "text",
          "source": "/document/content"
        }
      ],
      "outputs": [
        {
          "name": "textItems",
          "targetName": "chunks"
        }
      ]
    },
    {
      "@odata.type": "#Microsoft.Skills.Text.LanguageDetectionSkill",
      "name": "language_detection",
      "description": "Detect programming language from content",
      "context": "/document",
      "inputs": [
        {
          "name": "text",
          "source": "/document/content"
        }
      ],
      "outputs": [
        {
          "name": "languageCode",
          "targetName": "detected_language"
        }
      ]
    },
    {
      "@odata.type": "#Microsoft.Skills.Text.KeyPhraseExtractionSkill",
      "name": "key_phrase_extraction",
      "description": "Extract key programming concepts",
      "context": "/document/chunks/*",
      "defaultLanguageCode": "en",
      "maxKeyPhraseCount": 20,
      "inputs": [
        {
          "name": "text",
          "source": "/document/chunks/*"
        }
      ],
      "outputs": [
        {
          "name": "keyPhrases",
          "targetName": "key_concepts"
        }
      ]
    },
    {
      "@odata.type": "#Microsoft.Skills.Text.MergeSkill",
      "name": "merge_chunk_id",
      "description": "Join file path and chunk text to build deterministic chunk id source",
      "context": "/document/chunks/*",
      "separator": "|",
      "inputs": [
        { "name": "text", "source": "/document/metadata_storage_path" },
        { "name": "text", "source": "/document/chunks/*" }
      ],
      "outputs": [
        { "name": "mergedText", "targetName": "chunk_id_source" }
      ]
    },
    {
      "@odata.type": "#Microsoft.Skills.Text.AzureOpenAIEmbeddingSkill",
      "name": "embed_chunk",
      "description": "Generate 3072-d embeddings for each chunk",
      "context": "/document/chunks/*",
      "resourceUri": "https://{AOAI_SUBDOMAIN}.openai.azure.com",
      "deploymentId": "{AOAI_EMBED_DEPLOYMENT}",
      "modelName": "text-embedding-3-large",
      "dimensions": 3072,
      "inputs": [
        { "name": "text", "source": "/document/chunks/*" }
      ],
      "outputs": [
        { "name": "embedding", "targetName": "chunk_embedding" }
      ]
    }
  ],
  "cognitiveServices": {
    "@odata.type": "#Microsoft.Azure.Search.CognitiveServicesByKey",
    "key": "{COGNITIVE_SERVICES_KEY}",
    "description": "Cognitive Services for text processing"
  }
}

  "vectorSearch": {
    "algorithms": [
      {
        "name": "hnsw-config",
        "kind": "hnsw",
        "hnswParameters": {
          "m": 12,
          "efConstruction": 300,
          "efSearch": 120,
          "metric": "cosine"
        }
      }
    ],
    "profiles": [
      {
        "name": "vector-profile-hnsw",
        "algorithmConfigurationName": "hnsw-config",
        "vectorizerName": "text-embedding-3-large-vectorizer"
      }
    ],
    "vectorizers": [
      {
        "name": "text-embedding-3-large-vectorizer",
        "kind": "azureOpenAI",
        "azureOpenAIParameters": {
          "resourceUri": "${AZURE_OPENAI_ENDPOINT}",
          "deploymentId": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
          "modelName": "text-embedding-3-large"
        }
      }
    ]
  },
  "semantic": {
    "configurations": [
      {
        "name": "semantic-config",
        "prioritizedFields": {
          "titleField": {
            "fieldName": "function_name"
          },
          "contentFields": [
            {
              "fieldName": "content"
            },
            {
              "fieldName": "docstring"
            }
          ],
          "keywordsFields": [
            {
              "fieldName": "tags"
            },
            {
              "fieldName": "language"
            },
            {
              "fieldName": "framework"
            }
          ]
        }
      }
    ]
  },
  "scoringProfiles": [
    {
      "name": "code_quality_boost",
      "textWeights": {
        "function_name": 3.0,
        "class_name": 2.5,
        "content": 2.0,
        "docstring": 1.5,
        "comments": 1.0
      },
      "functions": [
        {
          "fieldName": "quality_score",
          "interpolation": "linear",
          "type": "magnitude",
          "boost": 2.0,
          "magnitude": {
            "boostingRangeStart": 0.7,
            "boostingRangeEnd": 1.0
          }
        },
        {
          "fieldName": "test_coverage",
          "interpolation": "linear",
          "type": "magnitude",
          "boost": 1.5,
          "magnitude": {
            "boostingRangeStart": 0.8,
            "boostingRangeEnd": 1.0
          }
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "freshness_boost",
      "textWeights": {
        "content": 2.0,
        "function_name": 2.0
      },
      "functions": [
        {
          "fieldName": "last_modified",
          "interpolation": "linear",
          "type": "freshness",
          "boost": 2.5,
          "freshness": {
            "boostingDuration": "P30D"
          }
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "popularity_boost",
      "functions": [
        {
          "fieldName": "reference_count",
          "interpolation": "logarithmic",
          "type": "magnitude",
          "boost": 2.0,
          "magnitude": {
            "boostingRangeStart": 5,
            "boostingRangeEnd": 100,
            "shouldBoostBeyondRangeByConstant": true
          }
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "tag_boost",
      "functions": [
        {
          "fieldName": "tags",
          "interpolation": "linear",
          "type": "tag",
          "boost": 3.0,
          "tag": {
            "tagsParameter": "boosttags"
          }
        }
      ],
      "functionAggregation": "sum"
    }
  ],
  "defaultScoringProfile": "code_quality_boost",
  "suggesters": [
    {
      "name": "code_suggester",
      "searchMode": "analyzingInfixMatching",
      "sourceFields": [
        "function_name",
        "class_name",
        "file_path"
      ]
    }
  ],
  "analyzers": [
    {
      "name": "code_content_analyzer",
      "tokenizer": "whitespace",
      "tokenFilters": [
        "lowercase",
        "stop"
      ]
    },
    {
      "name": "code_identifier_analyzer",
      "tokenizer": "pattern",
      "tokenFilters": [
        "lowercase"
      ]
    },
    {
      "name": "import_path_analyzer",
      "tokenizer": "path_hierarchy",
      "tokenFilters": [
        "lowercase"
      ]
    }
  ],
  "synonymMaps": [
    {
      "name": "code-synonyms",
      "synonyms": "func,function,method,procedure\nerr,error,exception\ninit,initialize,constructor,ctor\nauth,authenticate,authorization,authorize\ndb,database,storage"
    }
  ],
  "corsOptions": {
    "allowedOrigins": ["*"],
    "maxAgeInSeconds": 300
  }
}

# Example environment configuration for mcprag remote server
# Copy to .env.remote and fill in your values

# Azure Search Configuration (Required)
ACS_ENDPOINT=https://your-search-service.search.windows.net
ACS_QUERY_KEY=your-query-key-here  # Read-only key for search operations
ACS_ADMIN_KEY=your-admin-key-here  # Admin key for write operations (admin server only)
ACS_INDEX_NAME=codebase-mcp-sota

# Azure OpenAI Configuration (Optional - for embeddings)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_KEY=your-openai-key-here
AZURE_OPENAI_DEPLOYMENT=text-embedding-3-large

# Stytch Authentication (Required for production)
STYTCH_PROJECT_ID=project-live-xxxxx
STYTCH_SECRET=secret-live-xxxxx
STYTCH_ENV=production  # or 'test' for development

# Redis Configuration
REDIS_URL=redis://localhost:6380  # Using Docker Redis on port 6380

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8001
MCP_BASE_URL=http://localhost:8001  # Local development URL
MCP_ALLOWED_ORIGINS=https://app.yourcompany.com,https://docs.yourcompany.com

# User Tier Configuration
# Comma-separated list of admin email addresses
MCP_ADMIN_EMAILS=admin@yourcompany.com,cto@yourcompany.com

# Comma-separated list of developer domains
MCP_DEVELOPER_DOMAINS=yourcompany.com,trusted-partner.com

# Session Configuration
SESSION_DURATION_MINUTES=480  # 8 hours
MCP_REQUIRE_MFA=true  # Require MFA for admin operations

# Logging
MCP_LOG_LEVEL=INFO
MCP_DEBUG_TIMINGS=false

# Development Mode (set to true to bypass auth in development)
MCP_DEV_MODE=true

# Admin Mode (enables destructive operations)
MCP_ADMIN_MODE=false  # Set to true for admin server instance